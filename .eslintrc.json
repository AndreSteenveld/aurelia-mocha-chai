{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },

    "rules": {
        "indent": [ "error", 4 ],
        "spaced-comment": [ "error", "always" ],

        "max-len": [ "off" ],
        "no-param-reassign": [ "off" ]
    },

    "plugins": [ "import" ],
    "settings": {
        "import/ignore": [
            "jspm_packages",
            "node_modules",
            ".(scss|less|css)$",
            ".[^js(x)?]+$"
        ],
        "import/resolve": {
            "moduleDirectory": [
                "jspm_packages",
                "node_modules",
                "."
            ]
        },
        "import/resolver": {
            "jspm": {
                "moduleDirectory": "jspm_packages"
            },

            "node": true
        }
    }
}
